@model IcraTakipProgrami.Models.Login

<div class="container-md  " style="width: 500px; padding: 20px; margin: 20px auto;">
    <div class="card">
        <div class="card-header bg-primary">
            <h2 class="card-title text-white text-center">Giriş Yap</h2>
        </div>
        <div class="card-body">
            <form asp-action="Login" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label for="Email" class="form-label">Email</label>
                    <input asp-for="Email" id="Email" class="form-control" maxlength="50" placeholder="Mail adresiniz">
                </div>

                <div class="form-group">
                    <label for="Password" class="form-label">Şifre</label>
                    <input asp-for="Password" id="Password" type="password" class="form-control" maxlength="20" placeholder="Şifreniz">
                </div>

                <div class="text-center">
                    <button style="margin-top:20px" type="submit" class="btn btn-primary">Login</button>
                </div>
            </form>
        </div>
    </div>
</div>