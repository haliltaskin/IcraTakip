@model IcraTakipProgrami.Models.Avukatlar
@{
    <p>
        <b>@Model.Ad @Model.Soyad</b> isimli avukatı silmek istiyor musunuz?

        <form asp-action="Delete" method="post">
            <input type="hidden" name="id" value="@Model.Id">
            <button type="submit" class="btn btn-danger">Evet</button>
            <a asp-action="Index" class="btn btn-primary">Hayır</a>
        </form>
        
    </p>
}
