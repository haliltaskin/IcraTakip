@model IcraTakipProgrami.Models.Urunler
@{
    <div class="container">
        <h2>Ürün Güncelle</h2>

        <form asp-controller="Urunler" asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id">
            <div class="mb-3">
                <label asp-for="MusteriId" class="form-label">Müşteri</label>
                <select asp-for="MusteriId" asp-items="ViewBag.Musteriler" class="form-select form-select-md">
                    <option value="">Seçiniz</option>
                </select>
            </div>

            <div class="mb-3">
                <label asp-for="AvukatId" class="form-label">Avukat</label>
                <select asp-for="AvukatId" asp-items="ViewBag.Avukatlar" class="form-select form-select-md">
                    <option value="">Seçiniz</option>
                </select>
            </div>

            <div class="mb-3">
                <label asp-for="UrunAdi" class="form-label">Urun Adi</label>
                <input asp-for="UrunAdi" value="@Model.UrunAdi?.Trim()" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="KrediMudiNo" class="form-label">Kredi Mudi No</label>
                <input asp-for="KrediMudiNo" value="@Model.KrediMudiNo?.Trim()" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="TakipMiktari" class="form-label">Takip Miktarı</label>
                <input asp-for="TakipMiktari"  class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="DovizTipi" class="form-label">DovizTipi</label>
                <input asp-for="DovizTipi" value="@Model.DovizTipi?.Trim()" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="AylikFaizOrani" class="form-label">Aylik Faiz Orani</label>
                <input asp-for="AylikFaizOrani" value="@Model.AylikFaizOrani?.Trim()" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="TakipTarihi" class="form-label">Takip Tarihi</label>
                <input asp-for="TakipTarihi"  type="date" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="MasrafMudiNo" class="form-label">Masraf Mudi No</label>
                <input asp-for="MasrafMudiNo" value="@Model.MasrafMudiNo?.Trim()" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="MasrafBakiyesi" class="form-label">Masraf Bakiyesi</label>
                <input asp-for="MasrafBakiyesi"  class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="FaizMudiNo" class="form-label">Faiz Mudi No</label>
                <input asp-for="FaizMudiNo" value="@Model.FaizMudiNo?.Trim()" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="FaizBakiyesi" class="form-label">Faiz Bakiyesi</label>
                <input asp-for="FaizBakiyesi"  class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="TakipBirimKodu" class="form-label">Takip Birim Kodu</label>
                <input asp-for="TakipBirimKodu" value="@Model.TakipBirimKodu?.Trim()" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="TakipMudiNo" class="form-label">Takip Mudi No</label>
                <input asp-for="TakipMudiNo" value="@Model.TakipMudiNo?.Trim()" class="form-control">
            </div>

            <div class="mb-3">
                <button style="margin-bottom: 40px;" type="submit" class="btn btn-primary"> Kaydet</button>
            </div>
        </form>
    </div>
}


